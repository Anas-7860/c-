#include <iostream>

using namespace std;

int main() {

   int n,sum=0;

   cout<<"enter the no of terms you want to add :";

   cin>>n;

   int*ptr=new int[10];

    for(int i=0;i<n;i++){

       cout<<"enter number "<<i+1<<" : ";

       cin>>*(ptr+i);

       }

          for(int i=0;i<n;i++){

              sum+=*(ptr+i);

          }

          cout<<"the total marks obtained by students are :"<<sum;

    return 0;

}
